<%- include("../partials/header") %>

<form action="/posts" method="POST">
  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="title"
      value="<%= post.title %>"
      placeholder="About what?">
    <%- renderInputErrors(errors, "title") %>
  </div>

  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="imageUrl"
      value="<%= post.imageUrl %>"
      placeholder="e.g. http://imgur.com/myPic.jpg">
    <%- renderInputErrors(errors, "imageUrl") %>
  </div>

  <div class="form-group">
    <textarea
      class="form-control"
      name="content"
      cols="60"
      rows="5"
      placeholder="What are your thoughts?"><%= post.content %></textarea>
    <%- renderInputErrors(errors, "content") %>
  </div>

  <input type="submit" value="Save" class="btn btn-outline-success">
</form>

<%- include("../partials/footer") %>