<%- include("../partials/header") %>

<form action="/posts/<%= post.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="title"
      placeholder="About what?"
      value="<%= post.title %>">
  </div>

  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="imageUrl"
      value="<%= post.imageUrl %>"
      placeholder="e.g. http://imgur.com/myPic.jpg">
  </div>

  <div class="form-group">
    <textarea
      class="form-control"
      name="content"
      cols="60"
      rows="5"
      placeholder="What are your thoughts?"><%= post.content %></textarea>
  </div>

  <input type="submit" value="Save Changes" class="btn btn-outline-success">
</form>

<%- include("../partials/footer") %>